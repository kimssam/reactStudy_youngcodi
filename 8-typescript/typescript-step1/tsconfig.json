{
  "compilerOptions": {
    "target": "es5", //어떤 버전의 자바스크립트로 컴파일할것인지
    "lib": [ //타겟에 지정한 버전에 존재하지 않는 기능을 사용할 때 추가해서 사용가능
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx"
  },
  "include": [
    "src"
  ]
}
